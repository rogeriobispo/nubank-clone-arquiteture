{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                     
    "strict": true, 
    "outDir": "./build",
    "rootDir": "./src",
    "allowJs": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    }, 
    "typeRoots": [
      "@types",
      "./node_modules/@types",
    ],          
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false
  }
}
